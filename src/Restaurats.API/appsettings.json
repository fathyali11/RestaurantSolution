{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Level:u3}] {Message:lj}{NewLine}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName" ]
    },
    "AllowedHosts": "*"
}
